<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body id="samples">
    {{>menu}}
    
    <div class="okta-sign-in-form ui center aligned relaxed grid">
      <div class="row">
        <div class="ui header">
          <h2>Self Service Registration</h2>
        </div>
      </div>

      <div class="row">
        {{>formMessages}}
      </div>

      <div class="row">
        <form id="registration-form" class="ui large form" action="{{action}}" method="POST">
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                First Name
              </div>
              <input id="firstName" type="text" name="firstName" />
            </div>
          </div>
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Last Name
              </div>
              <input id="lastName" type="text" name="lastName" />
            </div>
          </div>
          <div class="field">
            <div class="ui labeled input">
              <div class="ui label">
                Email
              </div>
              <input id="email" type="text" name="email" />
            </div>
          </div>
          <button id="submit-button" class="ui fluid large primary submit button" type="submit">
            REGISTER
          </button>
        </form>
      </div>

    </div>
    
  </body>
</html>
